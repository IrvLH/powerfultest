<body class="table bg-secondary">
	<!-- Descripción -->
	<div class="row bg-secondary">
		<h3 class="h3 text-center shadow-lg rounded text-light">Agrega una tarea</h3>
	</div>
	<!-- Formulario de registro para tareas -->
	<form class="col-sm shadow-lg p-3 mb-5 rounded text-light">
		<div class="row">
			<div class="form-group">
				<label class="form-row" for="pregunta">Escribe el titulo:</label>
				<input class="form-control row" type="texto" id="titulo" name="titulo" required>
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label class="form-row" for="puntaje">Escribe la descripcion:</label>
				<input class="form-control row" type="text" id="descripcion" name="descripcion" required>
			</div>
		</div>
		
		<div class="row">
			<div class="form-group">
				<label class="form-row" for="cuestionario">Agrege una imagen (menor a 2MB)</label>
				<input class="form-control row" type="file" id="imagen" name="imagen" required>
			</div>
		</div>
		
		<button type="button" class="btn btn-lg font-weight-bolder text-light" style = "background-color:#1E8449 ;" id="creartarea">Crear tarea</button>
	</form>
