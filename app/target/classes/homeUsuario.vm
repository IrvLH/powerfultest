	<div class="container shadow-lg p-3 mb-5 rounded " style = "background-color: #2ECC71;">
		<div class="row p-3">
			<h3 class="h3 text-center shadow-lg rounded text-light">Tareas registradas</h3>
		</div>
			<form>
				#foreach($t in $tareas)
				<div class="row">
					<div class="form-group col">
						<div class="row text-center shadow-lg rounded" >
							<input id="idT" value = "$t.ID_TAREA" disabled style="display: none">
							<h1 class="text-light" id="tituloT">$t.TITULO</h1>
							<label class="form-row" for="nombres">Descripción: $t.descripcion</label>
							<label class="form-row" for="nombres">Imagen adjunta: $t.imagen</label>
							<div class="row">
					</div>
						</div>
					</div> 
				</div>
				#end
			</form>
            <div>
